/* 设置全局样式 */
QWidget {
}

QMenu { /* 全局右键菜单样式 */
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    color: #333333;
    padding: 5px;
}

QMenu::item {
    padding: 5px 10px 5px 10px;
    border: 1px solid transparent;
}

QMenu::item:selected {
    background-color: #e0e0e0;
    border: 1px solid #d0d0d0;
}

QMenu::separator {
    height: 1px;
    background: #e0e0e0;
    margin: 5px 0px 5px 0px;
}

QMenu::indicator {
    width: 13px;
    height: 13px;
}

QMenu::icon {
    padding-left: 10px;
}

QSplitter::handle { /* 分裂器样式 */
    background-color: #e0e0e0;
}

QSplitter::handle:horizontal {
    width: 1px;
}

QSplitter::handle:vertical {
    height: 1px;
}

QSplitter::handle:hover {
    background-color: #d0d0d0;
}

QMarkdownTextEdit {
    font-size: 18px;
    border: 1px solid transparent;
}
QMarkdownTextEdit:focus {
    border: 1px solid #e0e0e0;
}

QScrollArea {
	background: #ffffff;
	border: none;
    padding: 0px;
    margin: 0px;
}

QScrollBar:vertical {/* 滚动条样式 */
    background: #ffffff;
    width: 10px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: #d0d0d0;
    border-radius: 5px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: #c0c0c0;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {/* 滚动条样式 */
    background: #ffffff;
    height: 10px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: #d0d0d0;
    border-radius: 5px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background: #c0c0c0;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

