/* TabWidget类 */
#TabWidget {
	background: #000000;
	border: none;
	border-bottom-right-radius: 10px;
}

#TabWidget QTabBar::close-button { /* 关闭按钮样式 */
    image: url(:/res/icon/close.svg); /* 正常状态图标 */
    padding: 5px;
    subcontrol-position: right;
    border: none;
}
#TabWidget QTabBar::close-button:hover {
    image: url(:/res/icon/close.svg); /* 悬停状态图标 */
    border-radius: 5px;
    background: #e0e0e0;
}
#TabWidget QTabBar::close-button:pressed {
    image: url(:/res/icon/close.svg); /* 按下状态图标 */
}

#TabWidget::pane { /* 标签栏容器样式 */
    margin: 0px;
    border-bottom: 1px solid #e0e0e0;
	border-bottom-right-radius: 10px;
    background: #ffffff;         /* 白色背景 */
}

#TabWidget::tab-bar { /* 标签栏整体样式 */
    /* alignment: right; 改变对齐方式 */
}

#TabWidget QTabBar { /* 标签栏整体样式 */
    background: #ffffff;         /* 浅灰背景 */
    /*border-bottom: 1px solid #000000;    去除边框 */
}

#TabWidget QTabBar::scroller { /* 标签栏右侧区域（角落区域） */
    background: #000000;
    border: 1px solid #e0e0e0;
}

#TabWidget QTabBar QToolButton { /* 标签栏的左右滚动按钮 */
    background: #ffffff;
    border: none;
}

#TabWidget QTabBar::tab { /* 单个标签样式 */
    background: #f5f5f5;         /* 默认背景 */
    color: #000000;              /* 文字颜色 */
    border: 1px solid #e0e0e0;
    border-top-left-radius: 6px;  /* 圆角尺寸微调 */
    border-top-right-radius: 6px;
    min-width: 120px;             /* 最小宽度 */
    padding: 8px 20px;            /* 内边距优化 */
    margin-right: 0px;           /* 标签间隔 */
    /* border-bottom: 2px solid transparent; 透明下边框预留位置 */
    border-bottom: 1px solid #d0d0d0; /* 下划线指示器 */
}

#TabWidget QTabBar::tab:hover { /* 标签悬停效果 */
    background: #f0f0f0;         /* 悬停效果 */
    border-bottom: 1px solid #f0f0f0; /* 下划线指示器 */
}

#TabWidget QTabBar::tab:selected { /* 选中标签样式 */
    background: #ffffff;         /* 悬停效果 */
    border-bottom: 2px solid #ffffff; /* 下划线指示器 */
}
