/* 设置全局样式 */
QWidget {
    color: #e0e0e0;
}

QMenu { /* 全局右键菜单样式 */
    background-color: #2d2d2d;
    border: 1px solid #404040;
    color: #e0e0e0;
    padding: 5px;
}

QMenu::item {
    padding: 5px 10px 5px 10px;
    border: 1px solid transparent;
}

QMenu::item:selected {
    background-color: #404040;
    border: 1px solid #505050;
}

QMenu::separator {
    height: 1px;
    background: #404040;
    margin: 5px 0px 5px 0px;
}

QMenu::indicator {
    width: 13px;
    height: 13px;
}

QMenu::icon {
    padding-left: 10px;
}

QSplitter::handle { /* 分裂器样式 */
    background-color: #404040;
}

QSplitter::handle:horizontal {
    width: 1px;
}

QSplitter::handle:vertical {
    height: 1px;
}

QSplitter::handle:hover {
    background-color: #505050;
}

QMarkdownTextEdit {
    font-size: 18px;
    border: 1px solid transparent;
    background: #252525;
    color: #e0e0e0;
}
QMarkdownTextEdit {
    border: 1px solid #404040;
}

QScrollArea {
	background: #252525;
	border: none;
    padding: 0px;
    margin: 0px;
}

QScrollBar:vertical {/* 滚动条样式 */
    background: #252525;
    width: 10px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: #505050;
    border-radius: 5px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: #606060;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {/* 滚动条样式 */
    background: #252525;
    height: 10px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: #505050;
    border-radius: 5px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background: #606060;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

