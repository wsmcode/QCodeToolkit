    border: 1px solid #5092f4;
}

#SpinBox::up-button:hover,
#SpinBox::down-button:hover {
    background: #404040;
}

#SpinBox::up-button:pressed,
#SpinBox::down-button:pressed {
    background: #454545;
}


#SpinBox::up-button {
    subcontrol-origin: border;
	subcontrol-position: top right;
    border-left: 1px solid #404040;
    width: 15px;
    background: #353535;
}

#SpinBox::down-button {
    subcontrol-origin: border;
	subcontrol-position: bottom right;
    border-left: 1px solid #404040;
    width: 15px;
    background: #353535;
}

#SpinBox::up-arrow {
    image: url(:/res/icon/up-solid-light.svg);
	height: 12px;
	width: 12px;
}

#SpinBox::down-arrow {
    image: url(:/res/icon/down-solid-light.svg);
	height: 12px;
	width: 12px;
}

